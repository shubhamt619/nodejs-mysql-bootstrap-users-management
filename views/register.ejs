<%- include('partials/header'); %>
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Register as Student</h1>
                        </div>
                        <form class="user" name="register_form">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control fcu" id="exampleFirstName"
                                        placeholder="First Name" name="first_name">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control fcu" id="exampleLastName"
                                        placeholder="Last Name" name="last_name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control fcu" id="username"
                                        placeholder="Username"  name="user_name">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="form-group">
                                        <select class="form-control" placeholder="Select Role" id="role"  name="role">
                                            <option selected>Select Role</option>
                                            <option value="1">Student</option>
                                            <option value="2">Admin</option>
                                          </select>
                                    </div>
                                </div>
                            </div>    
                            <div class="form-group row">
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    You are :
                                </div>
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="0">
                                        <label class="form-check-label">
                                          Male
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="1">
                                        <label class="form-check-label">
                                          Female
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="email" class="form-control fcu" id="exampleInputEmail"
                                    placeholder="Email Address"  name="email">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control fcu" id="mobile_no"
                                    placeholder="Mobile no." name="mobile_no">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control fcu"
                                        id="exampleInputPassword" placeholder="Password" name="password">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control fcu"
                                        id="exampleRepeatPassword" placeholder="Confirm Password" />
                                </div>
                            </div>
                            <a id="btnRegister" href="#" class="btn btn-primary btn-user btn-block">
                                Register Account
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>
